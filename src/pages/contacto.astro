---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";

const metaDescription =
  "Contáctanos para desarrollar tu proyecto de software, sitio web, aplicación móvil o solución de IA. Ofrecemos consultas gratuitas para empresas y emprendedores en California.";
---

<Layout
  title="Contacto - Solicita una Consulta Gratuita"
  description={metaDescription}
>
  <Hero
    title="Contáctanos"
    subtitle="Estamos listos para ayudarte a desarrollar la solución digital ideal para tu negocio."
  />

  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <div>
          <h2 class="mb-6">Hablemos de tu Proyecto</h2>
          <p class="text-lg text-slate-700 mb-6">
            Completa el formulario y un experto de nuestro equipo se pondrá en
            contacto contigo en menos de 24 horas para discutir tu proyecto y
            ofrecerte una consulta personalizada sin costo.
          </p>

          <div class="space-y-6 mb-8">
            <div class="flex items-start gap-4">
              <div
                class="flex-shrink-0 bg-primary-100 rounded-full w-12 h-12 flex items-center justify-center"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-1">Email</h3>
                <p class="text-slate-600">info@merakideveloper.com</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="flex-shrink-0 bg-primary-100 rounded-full w-12 h-12 flex items-center justify-center"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-1">Teléfono</h3>
                <p class="text-slate-600">+52 (563) 527-0261</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="flex-shrink-0 bg-primary-100 rounded-full w-12 h-12 flex items-center justify-center"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-1">Ubicación</h3>
                <p class="text-slate-600">Tijuana, Baja California, México</p>
                <p class="text-slate-600">
                  Atendemos clientes en todo California
                </p>
              </div>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="https://linkedin.com/company/merakideveloper"
              target="_blank"
              rel="noopener noreferrer"
              class="btn bg-[#0077B5] text-white hover:bg-[#005582] flex items-center justify-center gap-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="currentColor"
                ><path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path></svg
              >
              LinkedIn
            </a>
            <a
              href="https://instagram.com/merakideveloper"
              target="_blank"
              rel="noopener noreferrer"
              class="btn bg-[#E1306C] text-white hover:bg-[#C13584] flex items-center justify-center gap-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="currentColor"
                ><path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                ></path></svg
              >
              Instagram
            </a>
          </div>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-lg">
          <form id="contactForm" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="nombre"
                  class="block text-sm font-medium text-slate-700 mb-1"
                  >Nombre *</label
                >
                <input
                  type="text"
                  id="nombre"
                  name="nombre"
                  required
                  class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                />
              </div>

              <div>
                <label
                  for="empresa"
                  class="block text-sm font-medium text-slate-700 mb-1"
                  >Empresa</label
                >
                <input
                  type="text"
                  id="empresa"
                  name="empresa"
                  class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-slate-700 mb-1"
                  >Email *</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                />
              </div>

              <div>
                <label
                  for="telefono"
                  class="block text-sm font-medium text-slate-700 mb-1"
                  >Teléfono</label
                >
                <input
                  type="tel"
                  id="telefono"
                  name="telefono"
                  class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
            </div>

            <div>
              <label
                for="servicio"
                class="block text-sm font-medium text-slate-700 mb-1"
                >Servicio de Interés *</label
              >
              <select
                id="servicio"
                name="servicio"
                required
                class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              >
                <option value="">Selecciona un servicio</option>
                <option value="Desarrollo de Software"
                  >Desarrollo de Software a Medida</option
                >
                <option value="Desarrollo Web">Desarrollo de Sitios Web</option>
                <option value="Aplicaciones Móviles"
                  >Aplicaciones Móviles</option
                >
                <option value="Inteligencia Artificial"
                  >Inteligencia Artificial</option
                >
                <option value="Machine Learning">Machine Learning</option>
                <option value="Análisis de Datos">Análisis de Datos</option>
                <option value="Otro">Otro</option>
              </select>
            </div>

            <div>
              <label
                for="mensaje"
                class="block text-sm font-medium text-slate-700 mb-1"
                >Mensaje *</label
              >
              <textarea
                id="mensaje"
                name="mensaje"
                rows="5"
                required
                class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
              ></textarea>
            </div>

            <button type="submit" class="w-full btn-primary">
              Enviar Mensaje
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script type="module">
  import { initContactForm } from "../scripts/contact-form";

  document.addEventListener("DOMContentLoaded", () => {
    initContactForm();
  });
</script>
