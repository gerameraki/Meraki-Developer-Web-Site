---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ServiceCard from "../components/ServiceCard.astro";
import TestimonialCard from "../components/TestimonialCard.astro";
import CtaSection from "../components/CtaSection.astro";

const services = [
  {
    title: "Desarrollo de Software a Medida",
    description:
      "Analizamos tus procesos empresariales y construimos soluciones digitales personalizadas que automatizan tareas y optimizan la operación de tu negocio.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>',
    url: "/servicios/desarrollo-software",
  },
  {
    title: "Desarrollo de Sitios Web",
    description:
      "Creamos sitios web rápidos, optimizados para buscadores y con diseño responsivo que destacan tu presencia digital y atraen clientes en California.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" /></svg>',
    url: "/servicios/desarrollo-web",
  },
  {
    title: "Aplicaciones Móviles",
    description:
      "Desarrollamos apps nativas y cross-platform para Android e iOS que son intuitivas, escalables y orientadas a la conversión o productividad.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>',
    url: "/servicios/aplicaciones-moviles",
  },
  {
    title: "Inteligencia Artificial",
    description:
      "Integramos soluciones con OpenAI y modelos de lenguaje para crear agentes inteligentes, asistentes virtuales y automatizar procesos con IA generativa.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>',
    url: "/servicios/inteligencia-artificial",
  },
  {
    title: "Machine Learning",
    description:
      "Desarrollamos modelos de aprendizaje supervisado/no supervisado para clasificación, predicción, detección de patrones y segmentación de clientes.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>',
    url: "/servicios/machine-learning",
  },
  {
    title: "Análisis de Datos",
    description:
      "Recolectamos, limpiamos y visualizamos datos para la toma de decisiones mediante dashboards interactivos y reportes ejecutivos personalizados.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>',
    url: "/servicios/analisis-datos",
  },
];

const testimonials = [
  {
    quote:
      "Meraki Developer transformó nuestra operación con un sistema de gestión que automatizó procesos críticos y nos ayudó a escalar nuestro negocio en San Diego.",
    author: "Rahul Verma",
    company: "Gerente de operaciones, San Diego",
    image:
      "https://images.pexels.com/photos/2379005/pexels-photo-2379005.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
  {
    quote:
      "La aplicación móvil que desarrollaron para nuestra tienda incrementó nuestras ventas en un 35% en el primer trimestre. El equipo de Meraki entendió perfectamente nuestras necesidades.",
    author: "Laura Sánchez",
    company: "Director de IT, Chula Vista",
    image:
      "https://images.pexels.com/photos/3763188/pexels-photo-3763188.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
  {
    quote:
      "Su expertise en IA nos permitió implementar un asistente virtual que reduce en 60% el tiempo de atención al cliente y mejora la experiencia de usuario.",
    author: "Michael Thompson",
    company: "Director Ejecutivo, Anaheim",
    image:
      "https://images.pexels.com/photos/1222271/pexels-photo-1222271.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
];

const metaDescription =
  "Meraki Developer ofrece servicios de desarrollo de software a medida, sitios web, aplicaciones móviles e IA para empresas y emprendedores en California. Transforma tu negocio con soluciones digitales de alto rendimiento.";
---

<Layout
  title="Expertos en Desarrollo de Software para Empresas en California"
  description={metaDescription}
>
  <Hero
    title="Impulsa tu empresa con tecnología a la medida"
    subtitle="Creamos software personalizado, sitios web potentes, apps móviles e integramos soluciones de IA para negocios que quieren crecer en serio."
    ctaText="Solicitar Cotización"
    ctaLink="/contacto"
    secondaryCtaText="Conocer Servicios"
    secondaryCtaLink="#servicios"
    isHomepage={true}
  />

  <section id="servicios" class="section bg-slate-50">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="mb-4">Nuestros Servicios</h2>
        <p class="text-lg text-slate-700">
          Desarrollamos soluciones tecnológicas personalizadas que impulsan el
          crecimiento y la eficiencia operativa de tu empresa.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => <ServiceCard {...service} />)}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="mb-4">¿Por qué Elegirnos?</h2>
        <p class="text-lg text-slate-700">
          Desde 2015, hemos desarrollado soluciones digitales innovadoras para
          empresas en California, con un enfoque en calidad y resultados.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div
          class="bg-white p-8 rounded-xl shadow-md text-center hover:shadow-lg transition-shadow"
        >
          <div
            class="bg-primary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Desarrollo Ágil</h3>
          <p class="text-slate-600">
            Metodología ágil con entregas continuas que te permiten ver avances
            constantes y resultados desde las primeras semanas.
          </p>
        </div>

        <div
          class="bg-white p-8 rounded-xl shadow-md text-center hover:shadow-lg transition-shadow"
        >
          <div
            class="bg-primary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Tecnología de Punta</h3>
          <p class="text-slate-600">
            Utilizamos las últimas tecnologías y frameworks para garantizar
            soluciones modernas, seguras y escalables.
          </p>
        </div>

        <div
          class="bg-white p-8 rounded-xl shadow-md text-center hover:shadow-lg transition-shadow"
        >
          <div
            class="bg-primary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-primary-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Equipo Experto</h3>
          <p class="text-slate-600">
            Profesionales especializados en cada área, con amplia experiencia en
            desarrollo y consultoría para empresas en California.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-primary-900 text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
        <defs>
          <pattern
            id="pattern"
            width="100"
            height="100"
            patternUnits="userSpaceOnUse"
          >
            <circle
              cx="50"
              cy="50"
              r="40"
              fill="none"
              stroke="white"
              stroke-width="1"></circle>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#pattern)"></rect>
      </svg>
    </div>

    <div class="container relative z-10">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="mb-4 text-white">Lo que Dicen Nuestros Clientes</h2>
        <p class="text-lg text-white opacity-90">
          Empresas en California que han transformado su negocio con nuestras
          soluciones digitales.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          testimonials.map((testimonial) => (
            <TestimonialCard {...testimonial} />
          ))
        }
      </div>
    </div>
  </section>

  <CtaSection
    title="¿Listo para transformar tu negocio?"
    subtitle="Contáctanos hoy mismo para una consulta gratuita y descubre cómo podemos ayudarte a alcanzar tus objetivos."
    ctaText="Solicitar Consulta"
    ctaLink="/contacto"
    bgColor="accent"
  />

  <script>
    // Reveal animation on scroll
    document.addEventListener("DOMContentLoaded", () => {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("active");
            }
          });
        },
        { threshold: 0.1 }
      );

      document
        .querySelectorAll(".service-card, .blog-card, section h2, section p")
        .forEach((el) => {
          el.classList.add("reveal");
          observer.observe(el);
        });
    });
  </script>
</Layout>
